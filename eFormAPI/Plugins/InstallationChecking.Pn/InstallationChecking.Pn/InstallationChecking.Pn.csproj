      <PackageReference Include="Microting.eFormApi.BasePn" Version="2.1.3" />
      <PackageReference Include="Microting.eFormBaseCustomerBase" Version="2.0.94" />
      <PackageReference Include="Microting.InstallationCheckingBase" Version="2.0.90" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="Resources\export-template.xlsx">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </EmbeddedResource>
      <EmbeddedResource Include="Resources\localization.json" />
    </ItemGroup>

</Project>
